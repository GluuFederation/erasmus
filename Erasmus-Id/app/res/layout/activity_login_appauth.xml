<?xml version="1.0" encoding="utf-8"?>
<!--<layout xmlns:android="http://schemas.android.com/apk/res/android">-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AppAuthLogin">

        <include layout="@layout/toolbar" android:id="@+id/toolbar"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/value_100"
                android:gravity="center"
                android:text="Houstan Fire Department"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_22" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/value_100"
                android:layout_marginRight="@dimen/value_100"
                android:background="@color/colorAccent"
                android:text="Login"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_change_organization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/value_10"
                android:gravity="center"
                android:text="Change Organization"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_18" />


        </RelativeLayout>
    </LinearLayout>
<!--</layout>-->

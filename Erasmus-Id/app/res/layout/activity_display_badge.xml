<?xml version="1.0" encoding="utf-8"?>

<!--<layout xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--xmlns:app="http://schemas.android.com/apk/res-auto">-->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="DisplayBadgeActivity">


        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_user_img"
                android:layout_width="@dimen/value_150"
                android:layout_height="@dimen/value_150"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/value_10"
                android:src="@drawable/avatar"/>

            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="@dimen/value_220"
                android:layout_height="@dimen/value_220"
                android:layout_below="@+id/iv_user_img"
                android:layout_centerHorizontal="true"
                android:src="@drawable/badge"
                android:contentDescription="@string/app_name"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_qrcode"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/value_10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="Name: "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="John smith"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/value_10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="Badge: "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:id="@+id/tv_badge_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="Basic fire fighter"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/value_10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="ID: "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="152463-1524-1478"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_18" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/value_10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="Expires: "
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:id="@+id/tv_exprire_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:gravity="center"
                        android:text="May 15,2018"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_18" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
    </LinearLayout>
<!--</layout>-->
